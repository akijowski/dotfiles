[core]

[user]
email = {{ .data.git.email | quote }}
name = {{ .data.git.name | quote }}

{{ if .data.git.enforceSSH -}}
[url "ssh://git@github.com/"]
insteadOf = https://github.com/
{{- end }}

[init]
defaultBranch = "main"

[credential]
{{- if eq .chezmoi.os "darwin" }}
helper = "osxkeychain"
{{- end }}

[gpg]
format = "ssh"
